---
import { t } from '../i18n/translations';

// Default to Spanish, will be updated on client side
const lang: 'es' | 'en' | 'de' = 'es';

// Proyectos placeholder - puedes agregar más proyectos aquí
const proyectos = [
  {
    id: 1,
    title: "Proyecto 1",
    description: "Descripción del proyecto 1",
    technologies: ["React", "Node.js"],
    link: "#",
    image: null
  },
  {
    id: 2,
    title: "Proyecto 2",
    description: "Descripción del proyecto 2",
    technologies: ["Astro", "Tailwind"],
    link: "#",
    image: null
  },
  {
    id: 3,
    title: "Proyecto 3",
    description: "Descripción del proyecto 3",
    technologies: ["Python", "Django"],
    link: "#",
    image: null
  },
  {
    id: 4,
    title: "Proyecto 4",
    description: "Descripción del proyecto 4",
    technologies: ["Vue", "TypeScript"],
    link: "#",
    image: null
  },
];
---

<section class="pt-2 pb-8 px-2 sm:px-4 mx-auto max-w-5xl sm:pb-16 lg:px-6">
  <div class="max-w-2xl mb-4 sm:mb-6 mx-auto px-2">
    <p class="text-gray-500 text-base sm:text-lg md:text-xl dark:text-gray-400 text-center text-pretty" data-i18n="proyectosDesc">{t('proyectosDesc', lang)}</p>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
    {proyectos.map((proyecto) => (
      <a
        href={proyecto.link}
        target="_blank"
        rel="noopener noreferrer"
        class="proyecto-card group relative bg-neutral-800/50 rounded-lg p-4 sm:p-5 border border-neutral-700 hover:border-yellow-400/50 transition-all duration-500 ease-in-out hover:scale-[1.02] hover:shadow-lg hover:shadow-yellow-400/20"
      >
        <div class="flex flex-col h-full">
          {proyecto.image ? (
            <img
              src={proyecto.image}
              alt={proyecto.title}
              class="w-full h-48 object-cover rounded-lg mb-4"
            />
          ) : (
            <div class="w-full h-32 sm:h-40 bg-gradient-to-br from-neutral-700 to-neutral-900 rounded-lg mb-3 sm:mb-4 flex items-center justify-center">
              <svg class="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
          )}
          
          <h3 class="text-lg sm:text-xl font-bold text-white mb-2 sm:mb-3 group-hover:text-yellow-400 transition-colors duration-300">
            {proyecto.title}
          </h3>
          
          <p class="text-gray-400 text-sm sm:text-base mb-3 sm:mb-4 flex-grow">
            {proyecto.description}
          </p>
          
          <div class="flex flex-wrap gap-2 mb-3 sm:mb-4">
            {proyecto.technologies.map((tech) => (
              <span class="px-2 sm:px-3 py-1 text-xs sm:text-sm font-medium bg-neutral-700 text-gray-300 rounded-full">
                {tech}
              </span>
            ))}
          </div>
          
          <div class="mt-2 sm:mt-3 flex items-center text-yellow-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <span class="text-sm sm:text-base font-medium">Ver proyecto</span>
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<script>
  function updateProyectosTranslations() {
    const lang = localStorage.getItem('language') || 'es';
    const translations = window.__TRANSLATIONS__ || {};
    const langTranslations = translations[lang] || translations['es'] || {};
    
    document.querySelectorAll('[data-i18n]').forEach((element) => {
      const key = element.getAttribute('data-i18n');
      if (key && langTranslations[key]) {
        element.textContent = langTranslations[key];
      }
    });
  }
  
  window.addEventListener('languagechange', updateProyectosTranslations);
</script>

<style>
  .proyecto-card {
    cursor: pointer;
  }
  
  .proyecto-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(250, 204, 21, 0.1) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    border-radius: 0.5rem;
    pointer-events: none;
  }
  
  .proyecto-card:hover::before {
    opacity: 1;
  }
  
</style>

